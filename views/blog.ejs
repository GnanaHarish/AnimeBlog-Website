<% if(blog != null){ %>
    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- blog.name %></li>
    </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- blog.image %>" class="img-fluid sticky-top" style="top : 20px" alt="<%- blog.name %>" loading="lazy" id="blog-img">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12"><h1><%- blog.name %></h1></div>
                <div class="col-12 mb-4"><i class="bi bi-tag"> <%- blog.categories %></i></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Keyboard confessional : </h4>
                    <%- blog.description %>
                </div>
            </div>

            <div class="row pt-4">
                <div class="col-12">
                    <h4>Thumbs up-o-meter : </h4>
                        <div class="col-12 mb-4"><h2><%- blog.ratings %> / 10</h2></div>
                </div>
            </div>

            <div class="row pt-4">
                <div class="col-12">
                    <h4>Dropped by. : </h4>
                        <div class="col-12 mb-4"><%- blog.username %></div>
                </div>
            </div>
        </div>
    </div>
<%} else {%>
    <p>No Item Found...</p>
<% }%>