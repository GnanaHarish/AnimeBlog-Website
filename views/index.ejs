<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img src="/img/hero.jpg" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Anime Blogging" id="heroimg">
  </div>

  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">Watch an anime,Blog it</h1>
    <p class="lead">
      Welcome to our anime blog - the only place where it's socially acceptable to wear cat ears while writing! Join us as we explore the wonderful world of Japanese animation, from heartwarming romances to epic battles and everything in between. So come for the anime, stay for the fun - we promise not to judge your body pillow collection.
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a href="/explore-latest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore New Blogs</a>
      <a href="/random-blog" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Random Blog</a>
    </div>
  </div>

</div>



<!--Blogs start-->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">

  <% if(categories != ''){ %>
  <% categories.forEach(function(category, index){ %>
  <a href="/categories/<%- category.name %>" class="cols text-center blog__link">
    <div class="blog__img shadow">
      <img src="img/<%- category.image %>" alt="<%- category.name %>" loading="lazy">
    </div>
    <div class="pt-1"><%- category.name %></div>
  </a>
  <%})%>
  <% } %>
  <a href="/categories" class="cols text-center blog__link">
    <div class="blog__img shadow">
      <img src="img/view-all.jpg" alt="View All Categories" loading="lazy">
    </div>
    <div class="pt-1">View All Categories</div>
  </a>
</div>
<!--Blogs end-->


<!-- Latest start -->
<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Blogs</h2>
    <!-- <a href="/latest-blog" class="ms-auto">View More</a> -->
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(blog != ''){  %>
    <% blog.blogs.forEach(function(b, index){ %>
    <a href="/blogs/<%= b._id%>" class="cols text-center blog__link">
      <div class="blog__img blog__img--large  shadow">
        <img src="uploads/<%= b.image%>" alt="<%= b.name%>" loading="lazy">
      </div>
      <div class="pt-1"><%= b.name%></div>
    </a>
    <%})%>
    <% } %>
  </div>
</section>
<!-- Latest end -->

